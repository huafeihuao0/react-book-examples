{
  "name": "redux-blog",
  "version": "1.0.0",
  "description": "a simple blog based on react and redux",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcthur/react-book-examples"
  },
  "scripts": {//【执行脚本】
    "build": "./node_modules/.bin/webpack", //构建
    "start": "./node_modules/.bin/webpack-dev-server --hot --inline --content-base .", //运行
    "test": "mocha --compilers js:babel-register" //测试
  },
  "dependencies": {
    "react": "^15.0.2",
    "react-dom": "^15.0.2",

    "redux": "^3.3.1",
    "react-redux": "^4.4.0",

    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.0",

    "redux-composable-fetch": "^0.3.4",//组合请求
    "redux-thunk": "^1.0.3",  //分发函数
    "whatwg-fetch": "^0.11.0"//请求
  },
  "devDependencies": {
    //【babel】
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    //【test】
    "mocha": "^2.4.5",
    "expect.js": "^0.3.1",
    //【devtools】
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",  //监测面板
    "redux-devtools-log-monitor": "^1.0.4", //log面板
    //【webpack】
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "style-loader": "^0.13.1",  //行内样式加载器
    "css-loader": "^0.23.1"//css加载器
  }
}
